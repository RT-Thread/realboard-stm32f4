Import('RTT_ROOT')
Import('rtconfig')
from building import *

src	= Split('''
png.c
pngerror.c
pnggccrd.c
pngget.c
pngmem.c
pngpread.c
pngread.c
pngrio.c
pngrtran.c
pngrutil.c
pngset.c
pngtrans.c
pngvcrd.c
pngwio.c
pngwrite.c
pngwtran.c
pngwutil.c
''')
CPPPATH = [RTT_ROOT + '/components/external/libpng']

group = DefineGroup('libpng', src, depend = ['RTGUI_IMAGE_PNG'], CPPPATH = CPPPATH)

Return('group')
